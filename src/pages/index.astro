---
import Logo from "@/components/logo.astro";
import Window from "@/components/window.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Guia de Carreira para Ciência da Computação">
	<main class="p-4 lg:px-8 flex-1 flex flex-col">
		<Logo />

		<Window>
			<section class="px-3 py-4 flex flex-col gap-4 bg-white/5">
				<h2 class="font-display text-3xl">Roadmap</h2>
				<div class="relative border-t-[0.5px] pt-2 border-white/10">
					<h3 class="absolute right-0 top-3 text-sm">Novembro</h3>
					<ul>
						<li class="py-1">
							<p class="line-through opacity-30">
								Design e implentação do site
							</p>
						</li>
						<li class="py-1"><p>Capturar respostas do form</p></li>
						<li class="py-1"><p>Publicar resultado do form</p></li>
						<li class="py-1"><p>Publicar primeira versão do guia</p></li>
						<li class="py-1"><p>...</p></li>
					</ul>
				</div>
			</section>
		</Window>
	</main>

	<footer class="p-4 lg:px-8 flex justify-center">
		<p class="text-xs opacity-70">
			Design e desenvolvimento por <a
				class="underline"
				href="https://twitter.com/pr333do"
				target="_blank">pr333do</a
			>. Código fonte disponível no <a
				class="underline"
				href="https://github.com/pr333do/guia-de-carreira"
				target="_blank">Github</a
			>
		</p>
	</footer>
</Layout>
