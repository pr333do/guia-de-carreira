---
const id = import.meta.env.PUBLIC_GA_METRIC_ID;

const scriptString = `
  window.dataLayer = window.dataLayer || [];

  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());

  gtag("config", "${id}");
`;
---

<!-- Google tag (gtag.js) -->
<script
  type="text/partytown"
  src=`https://www.googletagmanager.com/gtag/js?id=${id}`></script>
<script set:html={scriptString} type="text/partytown" />
