---
interface Props {
  title: string;
}

const { title } = Astro.props;

const description =
  "Descubra a carreira ideal em Ciência da Computação! O guia ajuda estudantes a identificar a carreira perfeita no vasto mundo da tecnologia. Comece sua jornada aqui.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL("/og/og.jpg", Astro.url);
---

<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalURL} />

<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={"https://guia-de-carreira.vercel.app"} />
<meta property="og:image" content={socialImageURL} />

<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={socialImageURL} />
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:creator" content="@pr333do" />
